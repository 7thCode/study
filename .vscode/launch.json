{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "Launch C++",
            "preLaunchTask": "clang++ build active file",
            "cwd": "${workspaceFolder}",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch TypeScript",
            "preLaunchTask": "Compile TypeScript",
            "cwd": "${workspaceFolder}",
            "program": "${file}",
            "outFiles": [
                "${workspaceFolder}/build/**/*.js"
            ],
            "skipFiles": [
				"<node_internals>/**"
            ],
            "outputCapture": "std"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch Rust",
            "cargo": {
                "args": [
                    "build",
                    "--bin=study",
                    "--package=study"
                ],
                "filter": {
                    "name": "study",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}